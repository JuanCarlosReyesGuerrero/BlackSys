@using BlackSys.Helpers
@model IEnumerable<BlackSys.Models.Ars>
@{
    ViewBag.Title = "Administrar Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="page-title">
    Administracion de ARS
    <small> Security</small>
</h3>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-user"></i>Administracion de Ars
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="javascript:;" class="fullscreen"> </a>
                </div>
                <div class="actions">
                    <div class="inputs pull-right">
                        <a href="/Ars/Create" class="btn btn-circle btn-default btn-group-lg" style="margin-right:10px; margin-left:10px;">
                            <i class="fa fa-plus-circle"></i> Nuevo
                        </a>
                    </div>
                    <div class="inputs pull-right">
                        @using (Html.BeginForm())
                        {
                            <div class="portlet-input input-inline input-medium">
                                <div class="input-group">
                                    @Html.TextBox("Buscar", null, new { @class = "form-control input-circle-left", @placeholder = "Buscar", @title = "Buscar" })
                                    <span class="input-group-btn">
                                        <button class="btn btn-circle-right btn-default" type="submit"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover dt-responsive" id="sys-table" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ArsCodigo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ArsNombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ArsActivo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InstitucionId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ArsUsuarioRegistra)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ArsFechaRegistro)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ArsUsuarioModifica)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ArsFechaModifica)
                            </th>                           
                            <th>
                                Opciones
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArsCodigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArsNombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArsActivo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InstitucionId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArsUsuarioRegistra)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArsFechaRegistro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArsUsuarioModifica)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ArsFechaModifica)
                        </td>
                        <td>
                            @using (Html.BeginForm("Delete", "Ars", FormMethod.Post, new { @id = "notificationForm" }))
                            {
                                <div class="input-group-btn">
                                    @Html.AntiForgeryToken()
                                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Editar", "Edit", "Ars", routeValues: new { id = item.ArsId }, htmlAttributes: new { @class = "btn btn-default btn-sm" })
                                    @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-list-alt'></span>", "Detalles", "Details", "Ars", new { id = item.ArsId }, htmlAttributes: new { @class = "btn btn-default btn-sm" })
                                    <a class="btn btn-danger btn-sm" href="javascript:confirmDelete('Delete','@item.ArsId')"><span class='glyphicon glyphicon-trash'></span></a>
                                </div>
                            }
                        </td>
                    </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="/Content/plugins/datatables/datatables.js" type="text/javascript"></script>
    <script src="/Content/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="/Content/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>

}

@section topLevel{
    @{Html.RenderPartial("_RenderConfirm.Modal"); }
}










